- form_for([:admin, @company]) do |f|
  - if @company.errors.any?
    #error_explanation
      %h2= pluralize(@company.errors.count, "error") + "prohibited this company from being saved:"

      %ul
        - @company.errors.full_messages.each do |msg|
        %li= msg

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :api_key %><br />
    <%= f.text_field :api_key %>
  </div>
  <div class="field">
    <%= f.label :subdomain %><br />
    <%= f.text_field :subdomain %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn success' %>
  </div>
<% end %>
