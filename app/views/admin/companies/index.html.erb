<% @companies.each do |company| %>
  <tr>
    <td><%= company.name %></td>
    <td><%= company.phone %></td>
    <td><%= company.api_key %></td>
    <td><%= company.subdomain %></td>
    <td><%= link_to 'Show', admin_company_path(company) %></td>
    <td><%= link_to 'Edit', edit_admin_company_path(company) %></td>
    <td><%= link_to 'Destroy', admin_company_path(company), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

